<?xml version="1.0"?>
<odoo>

	<record id="res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.milk_planning</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="stock.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<div id="production_lot_info" position="after">
				<h2>Milk products</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-xs-12 col-md-6 o_setting_box" title="Define the milk products for the planmning">
						<div class="o_setting_right_pane">
							<div class="text-muted">
								Define the products that will be used to make the planning
							</div>
							<div class="content-group">
								<div class="mt16">
									<label for="product_raw_milk" string="Raw milk product" class="o_light_label" />
									<field name="product_raw_milk" class="oe_inline" required="True" />
								</div>
								<div class="mt16">
									<label for="product_skimmed_milk" string="Skimmed milk product" class="o_light_label" />
									<field name="product_skimmed_milk" class="oe_inline" required="True" />
								</div>
								<div class="mt16">
									<label for="product_cream" string="Milk cream product" class="o_light_label" />
									<field name="product_cream" class="oe_inline" required="True" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</field>
	</record>
</odoo>
