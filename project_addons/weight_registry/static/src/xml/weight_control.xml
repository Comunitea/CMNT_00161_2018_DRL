<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">



    <t t-name="WeightRegistryMyMainMenu">
        <div class="o_weight_registry_kiosk_mode_container o_app_switcher_background">
            <div class="o_weight_registry_kiosk_mode">
                <t t-if="widget.state == 'init'">
                    <h1>Please set the vehicle number</h1>
                    <t t-if="widget.error">
                        <h2  style="color:red;">Vehicle <t t-esc="widget.input_number"/> not found, try again</h2>
                     </t >
                    <input type="text" name="vehicle_number" class="input_vehicle_number"/>
                    <i class="fa fa-truck btn-primary truck_button"/>
                </t>

                <t t-if="widget.state == '1step'">
                    <t t-if="widget.vehicle.weight_control_state=='checked_out'">
                        <h1>Vehicle <t t-esc="widget.vehicle.register"/></h1>
                        <i class="fa fa-caret-square-o-down btn-primary o_weight_registry_sign_in_out_icon"/>
                    </t>
                    <t t-if="widget.vehicle.weight_control_state=='checked_in'">
                        <h1>Vehicle <t t-esc="widget.vehicle.register"/></h1>
                        <i class="fa fa-caret-square-o-up btn-primary o_weight_registry_sign_in_out_icon"/>
                    </t>
                </t>
              
              
            </div>
        </div>
    </t>

   
</template>
