<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_weight_to_pick_wzd" model="ir.ui.view">
        <field name="name">view.weight.pick.wzd</field>
        <field name="model">weight.pick.wzd</field>
        <field name="arch" type="xml">
            <form string="Weight registry wizard">
                <header>
                     <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,done"/>
                </header>
                <separator string="Picking"/>
                <h1>
                        <field name="picking_id" readonly="1"/>
                </h1>
                <h2>
                        <field name="id" readonly="1"/>
                </h2>
                <h3>
                        <field name="registry_type" readonly="1"/>
                </h3>
                <label string="Select weight registry to add. Green lines already added"/>
                <br/>


                <!--field name="move_lines">
                    <tree edit="0" create="0">
                        <field name="product_id"/>
                        <field name="lot_id"/>
                        <field name="location_dest_id"/>
                        <field name="product_uom_qty"/>
                    </tree>
                </field-->
                <field name="line_ids" >
                    <tree editable="bottom" create="0"
                          decoration-success="added==True"
                          decoration-danger="to_add==True"
                          decoration_muted="check_out==False">
                        <field name="added" invisible="1"/>
                        <field name="to_add"/>
                        <field name="to_unlink" invisible="0"/>
                        <field name="weight_registry_id" readonly="1"/>
                        <field name="registry_type" readonly="1"/>
                        <field name="fill" readonly="1"/>
                        <field name="net"  readonly="1"/>
                        <field name="check_out_weight"  readonly="1"/>
                        <field name="picking_id" invisible="1" readonly="1"/>
                        <field name="registry_type" invisible="1" readonly="1"/>
                    </tree>
                </field>
                <!--field name="old_line_ids" invisible="0"/-->

                <footer>
                    <button name="action_apply_changes" string="Asignar" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window name="Weight to pick wizard"
                res_model="weight.pick.wzd"
                src_model="stock.picking"
                view_mode="form"
                target="new"
                key2="client_action_multi"
                id="act_view_weight_pick_wzd"/>

</odoo>
